{
  "name": "@the-trybe/react-pdf-viewer",
  "version": "1.0.0",
  "description": "A React wrapper component for PDF.js that provides a simple, configurable API for embedding PDFs in React applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "react",
    "pdf",
    "pdfjs",
    "pdf.js",
    "viewer",
    "document",
    "embed",
    "reader"
  ],
  "author": "The Trybe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-trybe/react-pdf-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/the-trybe/react-pdf-viewer/issues"
  },
  "homepage": "https://github.com/the-trybe/react-pdf-viewer#readme",
  "peerDependencies": {
    "pdfjs-dist": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "jsdom": "^24.0.0",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  },
  "sideEffects": [
    "*.css"
  ]
}
